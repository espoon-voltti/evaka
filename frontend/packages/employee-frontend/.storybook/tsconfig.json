{
  "extends": "../../../tsconfig.json",
  "compilerOptions": {
    "outDir": "dist",
    "target": "es6",
    "module": "es6",
    "baseUrl": "../src",
    "paths": {
      "~*": ["../*"]
    },
    "lib": [
      "dom",
      "es6",
      "es2017.string",
      "es2019"
    ],
    "jsx": "react",
    "noEmit": true,
    "skipLibCheck": true
  },
  "include": [
    "../src/**/*"
  ]
}
