{
  "compilerOptions": {
    "target": "es2022",
    "module": "esnext",
    "lib": [
      "dom",
      "es2021"
    ],
    "types": [],
    "declaration": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "importHelpers": true,
    "moduleResolution": "bundler",
    "noImplicitReturns": true,
    "noUnusedLocals": true,
    "resolveJsonModule": true,
    "sourceMap": true,
    "strict": true,
    "baseUrl": "src"
  }
}
