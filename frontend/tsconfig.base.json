{
  "compilerOptions": {
    "target": "es2022",
    "module": "esnext",
    "lib": [
      "dom",
      "es2021"
    ],
    "types": ["node"],
    "declaration": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "importHelpers": true,
    "isolatedModules": true,
    "moduleResolution": "bundler",
    "noImplicitReturns": true,
    "noUnusedLocals": true,
    "resolveJsonModule": true,
    "sourceMap": true,
    "strict": true,
    "paths": {
      "lib-common": [
        "./src/lib-common"
      ],
      "lib-components": [
        "./src/lib-components"
      ],
      "lib-customization": [
        "./src/lib-customization"
      ]
    }
  }
}
