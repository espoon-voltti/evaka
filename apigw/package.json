{
  "name": "evaka-api-gateways",
  "version": "1.0.0",
  "description": "API gateways for eVaka",
  "private": true,
  "license": "LGPL-2.1-or-later",
  "scripts": {
    "clean": "rm -rf ./build ./dist",
    "build": "yarn clean && yarn install && tsc --build src",
    "lint": "eslint --ext .ts,.tsx --max-warnings 0 .",
    "lint:fix": "yarn lint --fix",
    "pretest": "tsc --build src/pino-cli",
    "test": "yarn lint:fix && NODE_ENV=test jest",
    "dev": "tsc --build src && concurrently --prefix '[{name}]' --names 'tsc,nodemon' 'tsc --build --preserveWatchOutput -w src' 'NODE_ENV=local nodemon dist/index.js'",
    "coverage": "NODE_ENV=test jest --coverage",
    "pretest-ci": "yarn pretest",
    "test-ci": "NODE_ENV=test jest --runInBand",
    "prepack": "exit 1"
  },
  "dependencies": {
    "axios": "^0.24.0",
    "connect-redis": "^6.0.0",
    "cookie-parser": "^1.4.5",
    "csurf": "^1.11.0",
    "date-fns": "^2.25.0",
    "dd-trace": "^1.5.1",
    "express": "^4.17.1",
    "express-http-proxy": "^1.6.3",
    "express-session": "^1.17.2",
    "fast-json-parse": "^1.0.3",
    "fast-xml-parser": "^3.21.0",
    "helmet": "^4.6.0",
    "jsonwebtoken": "^8.5.1",
    "lodash": "^4.17.21",
    "make-error-cause": "^2.3.0",
    "nocache": "^3.0.1",
    "passport": "^0.5.2",
    "passport-dummy": "0.0.1",
    "passport-saml": "3.2.1",
    "pino": "^7.8.1",
    "pino-http": "^6.6.0",
    "pino-pretty": "^7.5.3",
    "pump": "^3.0.0",
    "query-string": "^7.0.1",
    "redis": "^3.1.2",
    "source-map-support": "^0.5.21",
    "split2": "^4.1.0",
    "through2": "^4.0.2",
    "uuid": "^8.3.2"
  },
  "devDependencies": {
    "@types/connect-redis": "^0.0.18",
    "@types/cookie-parser": "^1.4.2",
    "@types/csurf": "^1.11.2",
    "@types/express-http-proxy": "^1.6.3",
    "@types/express-session": "^1.17.4",
    "@types/jest": "^27.4.1",
    "@types/jsonwebtoken": "^8.5.5",
    "@types/lodash": "^4.14.176",
    "@types/node": "^14.17.32",
    "@types/node-forge": "^0.10.9",
    "@types/passport": "^1.0.7",
    "@types/passport-strategy": "^0.2.35",
    "@types/pino-http": "^5.8.1",
    "@types/pino-pretty": "^4.7.5",
    "@types/pino-std-serializers": "^2.4.1",
    "@types/pump": "^1.1.1",
    "@types/redis": "^2.8.32",
    "@types/redis-mock": "^0.17.0",
    "@types/source-map-support": "^0.5.4",
    "@types/split2": "^3.2.1",
    "@types/through2": "^2.0.36",
    "@types/tough-cookie": "^4.0.1",
    "@types/uuid": "^8.3.1",
    "@types/xml-crypto": "^1.4.2",
    "@types/xml2js": "^0.4.9",
    "@typescript-eslint/eslint-plugin": "^5.15.0",
    "@typescript-eslint/parser": "^5.15.0",
    "concurrently": "^6.3.0",
    "eslint": "^8.11.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-plugin-prettier": "^4.0.0",
    "jest": "^27.5.1",
    "jest-junit": "^13.0.0",
    "nock": "^13.1.4",
    "node-forge": "^1.0.0",
    "nodemon": "^2.0.14",
    "prettier": "^2.6.0",
    "redis-mock": "^0.56.3",
    "tough-cookie": "^4.0.0",
    "ts-jest": "^27.1.3",
    "ts-node": "^10.7.0",
    "typescript": "^4.6.2",
    "xml-crypto": "2.1.3",
    "xml2js": "^0.4.23"
  },
  "resolutions": {
    "@types/node": "^14.14.6"
  },
  "jest": {
    "preset": "ts-jest",
    "roots": [
      "<rootDir>/src"
    ],
    "testEnvironment": "node",
    "reporters": [
      "default",
      "jest-junit"
    ],
    "coverageDirectory": "./build/coverage-reports",
    "coverageReporters": [
      "text",
      "html"
    ]
  },
  "jest-junit": {
    "outputDirectory": "./build/test-reports/",
    "outputName": "jest-junit.xml"
  },
  "prettier": {
    "arrowParens": "always",
    "bracketSpacing": true,
    "semi": false,
    "singleQuote": true,
    "trailingComma": "none"
  },
  "eslintConfig": {
    "extends": [
      "eslint:recommended",
      "plugin:@typescript-eslint/recommended",
      "plugin:prettier/recommended"
    ],
    "parser": "@typescript-eslint/parser",
    "parserOptions": {
      "ecmaVersion": 2018,
      "sourceType": "module",
      "project": "./tsconfig.json",
      "ecmaFeatures": {
        "modules": true
      }
    },
    "plugins": [
      "@typescript-eslint"
    ],
    "rules": {
      "@typescript-eslint/explicit-function-return-type": "off",
      "@typescript-eslint/explicit-member-accessibility": "off",
      "@typescript-eslint/explicit-module-boundary-types": "off",
      "@typescript-eslint/no-use-before-define": "off",
      "@typescript-eslint/array-type": "off",
      "@typescript-eslint/ban-types": "off",
      "@typescript-eslint/camelcase": "off",
      "@typescript-eslint/no-var-requires": "off",
      "@typescript-eslint/no-unused-vars": [
        "warn",
        {
          "argsIgnorePattern": "^_",
          "varsIgnorePattern": "^_"
        }
      ],
      "@typescript-eslint/no-floating-promises": "error"
    }
  },
  "engines": {
    "node": ">= 16.13.0"
  }
}
