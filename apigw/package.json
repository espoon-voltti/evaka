{
  "name": "evaka-api-gateways",
  "version": "1.0.0",
  "description": "API gateways for eVaka",
  "private": true,
  "license": "LGPL-2.1-or-later",
  "scripts": {
    "clean": "rm -rf ./build ./dist",
    "build": "yarn clean && yarn install && tsc --build src",
    "lint": "eslint --ext .ts,.tsx src/",
    "lint-fix": "eslint --fix --ext .ts,.tsx src/",
    "pretest": "tsc --build src/pino-cli",
    "test": "yarn lint-fix && NODE_ENV=test jest",
    "dev": "tsc --build src && concurrently --prefix '[{name}]' --names 'tsc,nodemon' 'tsc --build --preserveWatchOutput -w src' 'NODE_ENV=local nodemon dist/index.js'",
    "coverage": "NODE_ENV=test jest --coverage",
    "pretest-ci": "yarn pretest",
    "test-ci": "NODE_ENV=test jest --runInBand",
    "prepack": "exit 1"
  },
  "dependencies": {
    "axios": "^0.21.0",
    "connect-redis": "^5.0.0",
    "cookie-parser": "^1.4.4",
    "csurf": "^1.10.0",
    "date-fns": "^2.16.1",
    "express": "^4.17.1",
    "express-http-proxy": "^1.6.2",
    "express-session": "^1.17.0",
    "fast-json-parse": "^1.0.3",
    "fast-xml-parser": "^3.17.4",
    "helmet": "^4.1.1",
    "jsonwebtoken": "^8.5.1",
    "lodash": "^4.17.20",
    "make-error-cause": "^2.3.0",
    "nocache": "^2.1.0",
    "passport": "^0.4.1",
    "passport-dummy": "0.0.1",
    "passport-saml": "1.3.5",
    "pino": "^6.7.0",
    "pino-http": "^5.3.0",
    "pino-pretty": "^4.3.0",
    "pump": "^3.0.0",
    "query-string": "^6.13.6",
    "redis": "^3.0.2",
    "source-map-support": "^0.5.16",
    "split2": "^3.2.2",
    "through2": "^4.0.2",
    "uuid": "^8.3.1"
  },
  "devDependencies": {
    "@types/connect-redis": "^0.0.14",
    "@types/cookie-parser": "^1.4.2",
    "@types/csurf": "^1.9.36",
    "@types/express-http-proxy": "^1.5.12",
    "@types/express-session": "^1.15.16",
    "@types/jest": "^26.0.15",
    "@types/jsonwebtoken": "^8.5.0",
    "@types/lodash": "^4.14.164",
    "@types/node": "^14.14.6",
    "@types/node-forge": "^0.9.5",
    "@types/passport": "^1.0.4",
    "@types/passport-saml": "^1.1.2",
    "@types/pino": "^6.3.3",
    "@types/pino-http": "^5.0.5",
    "@types/pino-std-serializers": "^2.4.1",
    "@types/pump": "^1.1.0",
    "@types/redis": "^2.8.28",
    "@types/source-map-support": "^0.5.3",
    "@types/split2": "^2.1.6",
    "@types/through2": "^2.0.34",
    "@types/tough-cookie": "^4.0.0",
    "@types/uuid": "^8.3.0",
    "@typescript-eslint/eslint-plugin": "^4.6.0",
    "@typescript-eslint/parser": "^4.6.0",
    "concurrently": "^5.3.0",
    "eslint": "^7.12.1",
    "eslint-config-prettier": "^6.15.0",
    "eslint-plugin-prettier": "^3.1.4",
    "jest": "^26.6.1",
    "jest-junit": "^12.0.0",
    "nock": "^13.0.4",
    "node-forge": "^0.10.0",
    "nodemon": "^2.0.6",
    "prettier": "^2.1.2",
    "tough-cookie": "^4.0.0",
    "ts-jest": "^26.4.3",
    "ts-node": "^9.0.0",
    "typescript": "^4.0.5"
  },
  "resolutions": {
    "@types/node": "^14.14.6"
  },
  "jest": {
    "preset": "ts-jest",
    "roots": [
      "<rootDir>/src"
    ],
    "testEnvironment": "node",
    "reporters": [
      "default",
      "jest-junit"
    ],
    "coverageDirectory": "./build/coverage-reports",
    "coverageReporters": [
      "text",
      "html"
    ]
  },
  "jest-junit": {
    "outputDirectory": "./build/test-reports/",
    "outputName": "jest-junit.xml"
  },
  "prettier": {
    "arrowParens": "always",
    "bracketSpacing": true,
    "semi": false,
    "singleQuote": true,
    "trailingComma": "none"
  },
  "eslintConfig": {
    "extends": [
      "plugin:@typescript-eslint/recommended",
      "plugin:prettier/recommended",
      "prettier/@typescript-eslint"
    ],
    "parser": "@typescript-eslint/parser",
    "parserOptions": {
      "ecmaVersion": 2018,
      "sourceType": "module",
      "project": "./tsconfig.json",
      "ecmaFeatures": {
        "modules": true
      }
    },
    "plugins": [
      "@typescript-eslint"
    ],
    "rules": {
      "@typescript-eslint/explicit-function-return-type": "off",
      "@typescript-eslint/explicit-member-accessibility": "off",
      "@typescript-eslint/explicit-module-boundary-types": "off",
      "@typescript-eslint/no-use-before-define": "off",
      "@typescript-eslint/array-type": "off",
      "@typescript-eslint/ban-types": "off",
      "@typescript-eslint/camelcase": "off",
      "@typescript-eslint/no-var-requires": "off",
      "@typescript-eslint/no-unused-vars": [
        "warn",
        {
          "argsIgnorePattern": "^_",
          "varsIgnorePattern": "^_"
        }
      ]
    }
  },
  "engines": {
    "node": ">= 14.15.0"
  }
}
