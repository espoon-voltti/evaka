{
  "name": "evaka-api-gateways",
  "version": "1.0.0",
  "description": "API gateways for eVaka",
  "type": "module",
  "private": true,
  "license": "LGPL-2.1-or-later",
  "scripts": {
    "clean": "rm -rf ./build ./dist",
    "type-check": "tsc",
    "lint": "eslint --max-warnings 0 .",
    "lint:fix": "yarn lint --fix",
    "test": "NODE_ENV=test NODE_OPTIONS=--experimental-vm-modules jest",
    "dev": "concurrently --prefix '[{name}]' --names 'tsc,node' 'tsc --preserveWatchOutput --watch' 'NODE_ENV=local node --watch-preserve-output --watch src/index.ts'",
    "test-ci": "NODE_ENV=test NODE_OPTIONS=--experimental-vm-modules jest --runInBand",
    "prepack": "exit 1"
  },
  "dependencies": {
    "@node-saml/node-saml": "5.1.0",
    "axios": "1.12.2",
    "connect-redis": "9.0.0",
    "cookie-parser": "1.4.7",
    "date-fns": "4.1.0",
    "dd-trace": "5.67.0",
    "express": "5.1.0",
    "express-basic-auth": "1.2.1",
    "express-http-proxy": "2.1.2",
    "express-session": "1.18.2",
    "fast-xml-parser": "5.2.5",
    "helmet": "8.1.0",
    "jsonwebtoken": "9.0.2",
    "lodash": "4.17.21",
    "make-error-cause": "2.3.0",
    "nocache": "4.0.0",
    "pino": "9.9.5",
    "pino-http": "10.5.0",
    "pino-pretty": "13.1.1",
    "pump": "3.0.3",
    "query-string": "9.3.1",
    "redis": "5.8.2",
    "split2": "4.2.0",
    "through2": "4.0.2",
    "uuid": "11.1.0",
    "zod": "4.1.11"
  },
  "devDependencies": {
    "@eslint/js": "9.35.0",
    "@jest/globals": "30.1.2",
    "@types/cookie-parser": "1.4.9",
    "@types/express-http-proxy": "1.6.7",
    "@types/express-session": "1.18.2",
    "@types/jsonwebtoken": "9.0.10",
    "@types/lodash": "4.17.20",
    "@types/node": "22.18.4",
    "@types/node-forge": "1.3.14",
    "@types/pump": "1.1.3",
    "@types/split2": "4.2.3",
    "@types/through2": "2.0.41",
    "@types/tough-cookie": "4.0.5",
    "@types/xml2js": "0.4.14",
    "concurrently": "9.2.1",
    "eslint": "9.35.0",
    "eslint-config-prettier": "10.1.8",
    "eslint-plugin-import": "2.32.0",
    "eslint-plugin-prettier": "5.5.4",
    "jest": "30.1.3",
    "jest-junit": "16.0.0",
    "nock": "14.0.10",
    "node-forge": "1.3.1",
    "prettier": "3.6.2",
    "tough-cookie": "6.0.0",
    "ts-jest": "29.4.2",
    "typescript": "5.9.2",
    "typescript-eslint": "8.44.0",
    "xml-crypto": "6.1.2",
    "xml2js": "0.6.2"
  },
  "jest-junit": {
    "outputDirectory": "./build/test-reports/",
    "outputName": "jest-junit.xml"
  },
  "prettier": {
    "arrowParens": "always",
    "bracketSpacing": true,
    "semi": false,
    "singleQuote": true,
    "trailingComma": "none"
  },
  "engines": {
    "node": ">= 22.18.0"
  },
  "packageManager": "yarn@4.9.4"
}
