{
  "name": "evaka-api-gateways",
  "version": "1.0.0",
  "description": "API gateways for eVaka",
  "private": true,
  "license": "LGPL-2.1-or-later",
  "scripts": {
    "clean": "rm -rf ./build ./dist",
    "build": "yarn clean && yarn install && tsc --build src",
    "lint": "eslint --ext .ts,.tsx --max-warnings 0 .",
    "lint:fix": "yarn lint --fix",
    "pretest": "tsc --build src/pino-cli",
    "test": "yarn lint:fix && NODE_ENV=test jest",
    "dev": "tsc --build src && concurrently --prefix '[{name}]' --names 'tsc,nodemon' 'tsc --build --preserveWatchOutput -w src' 'NODE_ENV=local nodemon dist/index.js'",
    "coverage": "NODE_ENV=test jest --coverage",
    "pretest-ci": "yarn pretest",
    "test-ci": "NODE_ENV=test jest --runInBand",
    "prepack": "exit 1"
  },
  "dependencies": {
    "@node-saml/node-saml": "^4.0.4",
    "@node-saml/passport-saml": "^4.0.3",
    "axios": "^0.26.1",
    "connect-redis": "^6.1.3",
    "cookie-parser": "^1.4.6",
    "csurf": "^1.11.0",
    "date-fns": "^2.29.3",
    "dd-trace": "^3.16.0",
    "express": "^4.18.2",
    "express-basic-auth": "^1.2.1",
    "express-http-proxy": "^1.6.3",
    "express-session": "^1.17.3",
    "fast-json-parse": "^1.0.3",
    "fast-xml-parser": "^4.1.3",
    "helmet": "^6.0.1",
    "jsonwebtoken": "^9.0.0",
    "lodash": "^4.17.21",
    "make-error-cause": "^2.3.0",
    "nocache": "^3.0.4",
    "passport": "^0.6.0",
    "pino": "^8.11.0",
    "pino-http": "^8.3.3",
    "pino-pretty": "^10.0.0",
    "pump": "^3.0.0",
    "query-string": "^7.1.3",
    "redis": "^3.1.2",
    "source-map-support": "^0.5.21",
    "split2": "^4.2.0",
    "through2": "^4.0.2",
    "uuid": "^9.0.0"
  },
  "devDependencies": {
    "@types/connect-redis": "^0.0.20",
    "@types/cookie-parser": "^1.4.3",
    "@types/csurf": "^1.11.2",
    "@types/express-http-proxy": "^1.6.3",
    "@types/express-session": "^1.17.7",
    "@types/jest": "^29.5.0",
    "@types/jsonwebtoken": "^9.0.1",
    "@types/lodash": "^4.14.192",
    "@types/node": "^18.15.11",
    "@types/node-forge": "^1.3.2",
    "@types/passport": "^1.0.12",
    "@types/passport-strategy": "^0.2.35",
    "@types/pino-http": "^5.8.1",
    "@types/pino-pretty": "^5.0.0",
    "@types/pino-std-serializers": "^4.0.0",
    "@types/pump": "^1.1.1",
    "@types/redis": "^2.8.32",
    "@types/redis-mock": "^0.17.1",
    "@types/source-map-support": "^0.5.6",
    "@types/split2": "^3.2.1",
    "@types/through2": "^2.0.38",
    "@types/tough-cookie": "^4.0.2",
    "@types/uuid": "^9.0.1",
    "@types/xml-crypto": "^1.4.2",
    "@types/xml2js": "^0.4.11",
    "@typescript-eslint/eslint-plugin": "^5.57.0",
    "@typescript-eslint/parser": "^5.57.0",
    "concurrently": "^8.0.1",
    "eslint": "^8.37.0",
    "eslint-config-prettier": "^8.8.0",
    "eslint-plugin-prettier": "^4.2.1",
    "jest": "^29.5.0",
    "jest-junit": "^15.0.0",
    "nock": "^13.3.0",
    "node-forge": "^1.3.1",
    "nodemon": "^2.0.22",
    "prettier": "^2.8.7",
    "redis-mock": "^0.56.3",
    "tough-cookie": "^4.1.2",
    "ts-jest": "^29.1.0",
    "ts-node": "^10.9.1",
    "typescript": "^5.0.3",
    "xml-crypto": "2.1.5",
    "xml2js": "^0.5.0"
  },
  "resolutions": {
    "@types/node": "^18.15.11"
  },
  "jest": {
    "preset": "ts-jest",
    "roots": [
      "<rootDir>/src"
    ],
    "testEnvironment": "node",
    "reporters": [
      "default",
      "jest-junit"
    ],
    "coverageDirectory": "./build/coverage-reports",
    "coverageReporters": [
      "text",
      "html"
    ]
  },
  "jest-junit": {
    "outputDirectory": "./build/test-reports/",
    "outputName": "jest-junit.xml"
  },
  "prettier": {
    "arrowParens": "always",
    "bracketSpacing": true,
    "semi": false,
    "singleQuote": true,
    "trailingComma": "none"
  },
  "eslintConfig": {
    "extends": [
      "eslint:recommended",
      "plugin:@typescript-eslint/recommended",
      "plugin:prettier/recommended"
    ],
    "parser": "@typescript-eslint/parser",
    "parserOptions": {
      "ecmaVersion": 2018,
      "sourceType": "module",
      "project": "./tsconfig.json",
      "ecmaFeatures": {
        "modules": true
      }
    },
    "plugins": [
      "@typescript-eslint"
    ],
    "rules": {
      "@typescript-eslint/explicit-function-return-type": "off",
      "@typescript-eslint/explicit-member-accessibility": "off",
      "@typescript-eslint/explicit-module-boundary-types": "off",
      "@typescript-eslint/no-use-before-define": "off",
      "@typescript-eslint/array-type": "off",
      "@typescript-eslint/ban-types": "off",
      "@typescript-eslint/camelcase": "off",
      "@typescript-eslint/no-var-requires": "off",
      "@typescript-eslint/no-unused-vars": [
        "warn",
        {
          "argsIgnorePattern": "^_",
          "varsIgnorePattern": "^_"
        }
      ],
      "@typescript-eslint/no-floating-promises": "error"
    }
  },
  "engines": {
    "node": ">= 18.12.0"
  },
  "packageManager": "yarn@3.5.0"
}
